
@model UserInfo
@{    
    
    ViewBag.Title = "Başvuru Durumu"; //ViewBag'in Layout ile kullanımı 
}

<main class="text-center">

<h1 class="h4">Başvuru Durumu</h1>


@if (Model.WillAttend==true){

<p>Teşekkürler, @Model.Name, toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
<a btn class="btn btn-sm btn-outline-primary" href="/meeting/list">Katılımcıları Listele</a>

}else{

    <p>@Model.Name, katılmadığından dolayı üzgünüz.</p>
    <a btn class="btn btn-sm btn-outline-primary" href="/meeting/apply">Başvuru Formu</a>


}


</main>